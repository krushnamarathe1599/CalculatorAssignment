<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454c53"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/buttonlayout"
        android:id="@+id/calculator_view_edittext_layout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:clickable="false"
            android:focusable="true"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:cursorVisible="true"
            android:verticalScrollbarPosition="right"
            android:textAlignment="viewEnd"
            android:textSize="50sp"
            android:background="@android:color/transparent"
            android:id="@+id/inputnumber"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#D1CECE"
            android:ellipsize="end"
            android:textSize="25sp"
            android:focusable="false"
            android:clickable="false"
            android:background="@android:color/transparent"
            android:id="@+id/result"
            android:textAlignment="viewEnd"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/buttonlayout"
        android:id="@+id/calculator_view_history_layout">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewHistory"
            tools:listitem="@layout/history_layout"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/buttonlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="C"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="7"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/buttonHistory"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableTop="@drawable/history"
                android:drawableTint="@color/white"
                android:paddingTop="25dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/buttonpercent"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="%"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="8"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="5"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="2"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/buttonbackspace"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableTop="@drawable/backspace"
                android:drawableTint="@color/white"
                android:paddingTop="25dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="9"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="6"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="3"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/buttondot"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="."
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/buttondivide"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="÷"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/buttonmultiply"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="*"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/buttonminus"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/buttonadd"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.widget.Button
                android:id="@+id/buttonequal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="="
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>